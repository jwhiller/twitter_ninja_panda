<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :name, autofocuse: true, placeholder:"Enter Name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :username, autofocuse: true, placeholder:"Choose Username",
    class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :location, autofocuse: true, placeholder:"Enter Location",
    class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.text_field :bio, autofocuse: true, placeholder:"Tell us about you",
    class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: "Your email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="form-group">
  <strong>Upload a Profile Picture</strong>
  <%= f.file_field :avatar %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
